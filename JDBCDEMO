package jdbcpackage;

import java.sql.*;

public class JDBCDEMO {

	public static void main(String[] args) throws SQLException {
		// TODO Auto-generated method stub
		/*
		 * readRecord(); insertRecord();
		 */
		batchdemo();
		
	}

	public static void readRecord() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		//Connection con=DriverManager.getConnection(url,usern,pass);
		Connection con=DriverManager.getConnection(url,usern,pass);
		System.out.println(con);
		String query="select * from STUDENT";
		Statement st=con.createStatement();
		ResultSet rs=st.executeQuery(query);
		while(rs.next()) {
		System.out.println("id "+rs.getInt(1));
		System.out.println("name "+rs.getString(2));
		System.out.println("mark "+rs.getInt(3));
		}
	}
	public static void insertRecord() throws SQLException {
		String url = "jdbc:mysql://localhost:3306/jdbcdemo";
		String usern = "root";
		String pass = "123456";
		// Connection con=DriverManager.getConnection(url,usern,pass);
		Connection con = DriverManager.getConnection(url, usern, pass);
		System.out.println(con);
		//String query = "insert into student values(5,'priya',9)";
		int id=6;
		String name="Bhuvan";
		int gpa=6;
		String query = "insert into student values("+id+",'"+name+"',"+gpa+")";
		Statement st = con.createStatement();
		int noRow = st.executeUpdate(query);
		System.out.println(noRow);
	}
	public static void insertRecordpst() throws SQLException {
		String url = "jdbc:mysql://localhost:3306/jdbcdemo";
		String usern = "root";
		String pass = "123456";
		// Connection con=DriverManager.getConnection(url,usern,pass);
		Connection con = DriverManager.getConnection(url, usern, pass);
		System.out.println(con);
		//String query = "insert into student values(5,'priya',9)";
		int id=7;
		String name="VArun";
		int gpa=6;
		String query = "insert into student values(?,?,?)";
		PreparedStatement pt = con.prepareStatement(query);
		pt.setInt(1, id);
		pt.setString(2, name);
		pt.setInt(3, gpa);
		int noRow = pt.executeUpdate();
		System.out.println(noRow);
	}
	public static void deleteRecord() throws SQLException {
		String url = "jdbc:mysql://localhost:3306/jdbcdemo";
		String usern = "root";
		String pass = "123456";
		// Connection con=DriverManager.getConnection(url,usern,pass);
		Connection con = DriverManager.getConnection(url, usern, pass);
		System.out.println(con);
		//String query = "insert into student values(5,'priya',9)";
		int id=5;
		
		String query = "delete from student where id ="+id;
		Statement st = con.createStatement();
		int noRow = st.executeUpdate(query);
		System.out.println(noRow);
	}
	public static void updateRecord() throws SQLException {
		String url = "jdbc:mysql://localhost:3306/jdbcdemo";
		String usern = "root";
		String pass = "123456";
		Connection con = DriverManager.getConnection(url, usern, pass);
		
		String query = "update student set gpa=2 where id =4";
		Statement st = con.createStatement();
		int noRow = st.executeUpdate(query);
		System.out.println(noRow);
		con.close();
	}
	public static void sp() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		//Connection con=DriverManager.getConnection(url,usern,pass);
		Connection con=DriverManager.getConnection(url,usern,pass);
		CallableStatement cst=con.prepareCall("{call GetStu()}");
		ResultSet rs=cst.executeQuery();
		//String query="select * from STUDENT";
		
		while(rs.next()) {
		System.out.println("id "+rs.getInt(1));
		System.out.println("name "+rs.getString(2));
		System.out.println("mark "+rs.getInt(3));
		}
	}
	public static void sp2() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		int id=2;
		Connection con=DriverManager.getConnection(url,usern,pass);
		CallableStatement cst=con.prepareCall("{call GetStuById(?)}");
		cst.setInt(1,id);
		ResultSet rs=cst.executeQuery();
		while(rs.next()) {
		System.out.println("id "+rs.getInt(1));
		System.out.println("name "+rs.getString(2));
		System.out.println("mark "+rs.getInt(3));
		}
	}
	public static void sp3() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		int id=4;
		Connection con=DriverManager.getConnection(url,usern,pass);
		CallableStatement cst=con.prepareCall("{call GetNameById(?,?)}");
		cst.setInt(1,id);
		cst.registerOutParameter(2, Types.VARCHAR);
		cst.executeUpdate();
		System.out.println(cst.getString(2));
		con.close();
	}
	public static void commit() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		String query1="update student set gpa=4 where id=1";
		String query2="update student set gpa=4 where id=2";
		Connection con=DriverManager.getConnection(url,usern,pass);
		con.setAutoCommit(false);
		Statement st=con.createStatement();
		int rs1=st.executeUpdate(query1);
		int rs2=st.executeUpdate(query2);
		System.out.println(rs1+" "+rs2);
		  if(rs1>0 && rs2>0) 
			  con.commit();
		con.close();
	}
	public static void batchdemo() throws SQLException {
		String url="jdbc:mysql://localhost:3306/jdbcdemo";
		String usern="root";
		String pass="123456";
		String query1="update student set gpa=5 where id=1";
		String query2="update student set gpa=5 where id=2";
		String query3="update student set gpa=5 where id=3";
		String query4="update student set gpa=5 where id=4";
		Connection con=DriverManager.getConnection(url,usern,pass);
		con.setAutoCommit(false);
		Statement st=con.createStatement();
		st.addBatch(query1);
		st.addBatch(query2);
		st.addBatch(query3);
		st.addBatch(query4);
		int res[]=st.executeBatch();
		
		  for(int i:res) { 
			  if(i>0) 
				  continue; 
			  else 
				  con.rollback();
			  }
		  con.commit();
		 
		con.close();
	}

}

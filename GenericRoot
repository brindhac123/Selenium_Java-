package javapac;
import java.util.*;
public class GenericRoot {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int sum=0,mod;
		while(n>=10) {
			sum=0;
		while(n>0) {
			mod=n%10;
			sum+=mod;
			n/=10;
		}
			n=sum;
			
		}
		System.out.println(sum);

	}

}

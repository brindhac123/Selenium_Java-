package javapac;
import java.util.*;
public class SpacedTraingle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		for(int i=n;i>=1;i--) {
			for(int j=1;j<i*2;j++) {
				System.out.print(" ");
			}
			for(int j=i;j<=n;j++) {
				System.out.print(j+" ");
			}
			for(int j=n-1;j>=i;j--) {
				System.out.print(j+" ");
			}
			System.out.println();
			
		}sc.close();
		

	}

}
